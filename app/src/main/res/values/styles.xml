<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.PetNet.MaterialButton" parent="@style/TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:clickable">true</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="Widget.PetNet.OutlineMaterialButton" parent="@style/Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">15dp</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="Widget.PetNet.EditText" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="backgroundTint">@null</item>
        <item name="borderRound">15dp</item>
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>
    <style name="Widget.PetNet.CheckBox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>
    <style name="Widget.PetNet.EditText.Search" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="backgroundTint">@null</item>
        <item name="borderRound">15dp</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>
</resources>