<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.views.auth.SignUpFragment">

  <ImageView
      android:id="@+id/backBtnIV"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="parent"
      android:background="@drawable/dim_primary_bg"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_marginTop="@dimen/size_20x"
      android:src="@drawable/ic_back_arrow"/>
  <TextView
      android:id="@+id/titleTV"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/backBtnIV"
      app:layout_constraintStart_toStartOf="parent"
      android:text="@string/create_your_account"
      style="@style/TextAppearance.PetNet.Headline5.PoppinsBold"
      android:layout_marginTop="@dimen/size_20x"/>
  <TextView
      android:id="@+id/usernameTV"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/titleTV"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_marginTop="@dimen/size_24x"
      android:text="@string/username"
      style="@style/TextAppearance.PetNet.Body1.PoppinsMedium"/>
<!--  <com.google.android.material.textfield.TextInputLayout-->
<!--      android:id="@+id/userNameIL"-->
<!--      android:layout_width="match_parent"-->
<!--      android:layout_height="70dp"-->
<!--      android:hint="@string/username"-->
<!--      app:layout_constraintTop_toBottomOf="@id/titleTV"-->
